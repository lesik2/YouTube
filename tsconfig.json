{
    "compilerOptions": {
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "module": "es2015",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "../",
        "outDir": "dist",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "declaration": true,
        "paths": {
            "@/*": ["./src/*"],
            "@components/*": ["./components/*"],
            "@ui/*": ["./components/ui/*"],
            "@pages/*": ["./pages/*"],
            "@hooks/*": ["./hooks/*"],
            "@api/*": ["./api/*"],
            "@utils/*": ["./utils/*"]
        }
    },
    "include": ["src/components","custom.d.ts"]
}
