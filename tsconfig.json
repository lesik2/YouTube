{
    "compilerOptions": {
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "target": "es5",
        "lib": ["esnext", "dom"],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "../",
        "outDir": "dist",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "declaration": true,
        "types": ["jest", "node","webpack-env"],
        "typeRoots": ["node_modules/@types"],
        "esModuleInterop": true
    },
    "include": ["src/components","custom.d.ts","src/tests"],
    "exclude": ["node_modules"]
}
